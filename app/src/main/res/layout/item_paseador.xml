<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorCafesito"
        app:cardCornerRadius="5dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fotoPaseador"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/paseador" />

            <TextView
                android:id="@+id/nombrePaseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Nombre del Paseador"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/direccionPaseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/magnificent"
                android:text="DirecciÃ³n"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/telefonoPaseador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/magnificent"
                android:text="Telefono"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/descripcionPaseador"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/magnificent"
                android:text="descripcion de la persona que esta prestando el servicio."
                android:textColor="@color/dark"
                android:textSize="14sp" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>